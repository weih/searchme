<div id="userbar">
  <% if current_user %>
    <ul>
      <span id="edit">Edit</span>
      <%= render :partial => "bars" %>
      <span id="swap">Add</div>
      <%= render :partial => "newbar" %>
    </ul>
  <% else %>
    <% @searchbars =  User.find(1).searchbars%>
    <ul>
      <%= render :partial => "bars", :locals => { :searchbars => @searchbars} %>
    </ul>
  <% end %>
</div>